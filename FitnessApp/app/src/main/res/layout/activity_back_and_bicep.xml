<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        app:titleTextColor="#ffffff"
        app:title="Back And Bicep"
        android:background="#000000"

        ></androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:background="@drawable/background">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/latpulldown"
        android:background="#ffffff"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="\u2022  Start of with a weight that allows you to familiarise yourself with the exercise."
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_margin="10dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="\u2022  Perform the exercise slowly, squeeze at the bottom, allowing you to feel the muscle burn."
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_margin="10dp"
            />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="\u2022 Perform this exercise 4 times, between 12-15 reps, each time increasing the weight. "
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_margin="10dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/bicepcurl"
        android:background="#ffffff"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="\u2022  Start of with a light weight, and squeeze the bicep, release slowly and complete 20 reps to start of with."
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_margin="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="\u2022  Increase the weight and complete 15 reps with 3 sets."
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="\u2022  You should feel the muscle burn by now."
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_margin="10dp"/>

</LinearLayout>
    </ScrollView>


</LinearLayout>