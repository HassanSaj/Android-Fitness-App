<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"


    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        app:titleTextColor="#ffffff"
        app:title="Chest And Tricep"
        android:background="#000000"

        ></androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:background="@drawable/background">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

          >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/chestpress"
                android:background="#ffffff"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="\u2022   Start of with a preferred weight, or just the bar to start of with.
"
                android:textSize="25dp"
                android:textColor="#000000"
                android:layout_margin="10dp"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="\u2022  Start of with 20 reps for your first set. You want to hit at least 4 sets."
                android:textSize="25dp"
                android:textColor="#000000"
                android:layout_margin="10dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="\u2022 As you increase the weight, lower your reps to 13, then 10 and then between 6-8."
                android:textSize="25dp"
                android:textColor="#000000"
                android:layout_margin="10dp"/>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/tricepdip"
                android:background="#ffffff"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="\u2022 This exercise will be tricky at first. Start of with positioning your hands on the handles, with your palms facing the floor."
                android:layout_margin="10dp"
                android:textSize="25dp"
                android:textColor="#000000"

                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="\u2022  Then start of slowly by completing 5 dips, nice and slow with your head facing forwards and your chest out."
                android:textSize="25dp"
                android:textColor="#000000"
                android:layout_margin="10dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="\u2022 Complete 3 sets of 5 reps, or increase your reps if you feel more comfortable with the exercise."
                android:textSize="25dp"
                android:textColor="#000000"
                android:layout_margin="10dp"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>