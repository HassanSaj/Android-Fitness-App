<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        app:titleTextColor="#ffffff"
        app:title="Snacks For Muscle Gain"
        android:background="#000000"

        ></androidx.appcompat.widget.Toolbar>





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:background="@drawable/background">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="  Snacks between your meals:

"  android:layout_margin="10dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="25dp"
                android:textColor="#000000"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="\u2022 Mixed nuts"
                android:textSize="25dp"
                android:textColor="#000000"
                android:layout_margin="10dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="\u2022 Greek yoghurt and mixed berries"
                android:textSize="25dp"
                android:textColor="#000000"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="\u2022 2 Whey protein shake"
                android:textSize="25dp"
                android:textColor="#000000"
                android:layout_margin="10dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="\u2022 Dried unsweetened coconut"
                android:textSize="25dp"
                android:textColor="#000000"
                android:layout_margin="10dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="\u2022 Canned salmon/sardines"
                android:textSize="25dp"
                android:textColor="#000000"
                android:layout_margin="10dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="\u2022 Fruit"
                android:textSize="25dp"
                android:textColor="#000000"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="\u2022 Apple slices with peanut butter"
                android:textSize="25dp"
                android:textColor="#000000"
                android:layout_margin="10dp"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>