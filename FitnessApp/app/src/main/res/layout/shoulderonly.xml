<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:toolbarId="@+id/toolbar"
        app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"

        app:titleTextColor="#ffffff"
        app:contentScrim="?attr/colorPrimary">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="?attr/actionBarSize"
            android:layout_width="match_parent"
            app:titleTextColor="#ffffff"

            ></androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.CollapsingToolbarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:background="@drawable/background">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/lateral"
                android:background="#ffffff"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="\u2022    For this exercise you want to go really light, a light weight will allow you to rip the muscle fibres whereas heavy weights will cause injuries.
"  android:layout_margin="10dp"
                android:textSize="25dp"
                android:textColor="#000000"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="\u2022   Stand straight with 2 dumbells by each side. Back straight and core tight."
                android:textSize="25dp"
                android:textColor="#000000"
                android:layout_margin="10dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="\u2022 Lift both weights as the image above shows and slowly bring them back down again."
                android:textSize="25dp"
                android:textColor="#000000"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="\u2022 Perform 3 sets, 15, 12, 10. Keep the same weight."
                android:textSize="25dp"
                android:textColor="#000000"
                android:layout_margin="10dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/crosswire"
                android:background="#ffffff"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="\u2022   WThis exercise will focus on the rear delts. Position a cable in each hand, the left cable in the right hand and vice versa.
"  android:layout_margin="10dp"
                android:textSize="25dp"
                android:textColor="#000000"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="\u2022  With your arms slightly bent, knees slight bent, pull back the cables."
                android:textSize="25dp"
                android:textColor="#000000"
                android:layout_margin="10dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="\u2022  Make sure this is done without the shoulder blades squeezing, again keep the weight light."
                android:textSize="25dp"
                android:textColor="#000000"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="\u2022  Perform 4 sets of 25 reps."
                android:textSize="25dp"
                android:textColor="#000000"
                android:layout_margin="10dp"/>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>