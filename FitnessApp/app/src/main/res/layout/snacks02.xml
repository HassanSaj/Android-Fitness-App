<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        app:titleTextColor="#ffffff"
        app:title="Snacks For Weight Loss"
        android:background="#000000"

        ></androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:background="@drawable/background">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="  Here are a few after noon snack options:
"  android:layout_margin="10dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="25dp"
                android:textColor="#000000"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="\u2022  Dried fruit"
                android:textSize="25dp"
                android:textColor="#000000"
                android:layout_margin="10dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="\u2022 Orange smoothie."
                android:textSize="25dp"
                android:textColor="#000000"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="\u2022 Banana bread Greek yoghurt."
                android:textSize="25dp"
                android:textColor="#000000"
                android:layout_margin="10dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="\u2022 Strawberry parfait with cottage cheese."
                android:textSize="25dp"
                android:textColor="#000000"
                android:layout_margin="10dp"/>




            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="\u2022 Protein bar."
                android:textSize="25dp"
                android:textColor="#000000"
                android:layout_margin="10dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="\u2022 Omelet."
                android:textSize="25dp"
                android:textColor="#000000"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="\u2022 Egg sandwich."
                android:textSize="25dp"
                android:textColor="#000000"
                android:layout_margin="10dp"/>







        </LinearLayout>
    </ScrollView>


</LinearLayout>